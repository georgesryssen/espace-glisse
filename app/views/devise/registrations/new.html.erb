  <div class="container py-5">
    <div class="row">
      <div class="card col-12 col-md-6 offset-lg-3">
        <h2 class="text-center my-4 title">Créer un compte</h2>

        <div class="card-show p-3">

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" }%>
              <%= f.input :first_name,
                          label: "Prénom",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "Prénom" }%>
              <%= f.input :last_name,
                          label: "Nom",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "Nom" }%>
              <%= f.input :phone,
                          label: "Téléphone portable",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "Téléphone portable" },
                          wrapper_html: {class: "align-items-center"} %>
              <%= f.input :address,
                          label: "Adresse personnelle",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "Adresse" },
                          wrapper_html: {class: "align-items-center"} %>
              <%= f.input :password,
                          label: "Mot de passe",
                          required: true,
                          hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                          label: "Confirmer mon mot de passe",
                          required: true,
                          input_html: { autocomplete: "new-password"},
                          wrapper_html: {class: "align-items-center"} %>
              <%= f.input :teacher,
                          label: "Cochez cette case si vous êtes prof de glisse ou gérant d'une école de glisse",
                          required: true,
                          autofocus: true %>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, "Créer mon compte", class: "btn-flat" %>
            </div>
          <% end %>
          <div class="text-center mt-3">
              <%= render "devise/shared/links"%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
